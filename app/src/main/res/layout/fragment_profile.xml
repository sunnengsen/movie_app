<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Settings icon2 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_setting2" />
    </LinearLayout>

    <!-- Profile -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <!-- Profile Image -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/jennie"
            android:contentDescription="Kim Jennie"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />

        <!-- Profile Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kim Jennie"
            android:textSize="20sp"
            android:layout_marginTop="10dp" />

        <!-- Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textSize="16sp"
            android:textColor="#777" />
    </LinearLayout>

    <!-- Details -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kim.jennie@gmail.com"
            android:layout_marginBottom="10dp" />

        <!-- Phone Number -->
        <View
            android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="19dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+6281234567890"
            android:layout_marginBottom="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="19dp" >

        <!-- Website -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.blackpink.com"
            android:textColor="@color/black"
            android:autoLink="web" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="19dp" >
    </LinearLayout>

    <!-- Security Info Section -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <!-- Password Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Password Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Masked Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="********"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                android:drawableEnd="@drawable/ic_blackeye"
                android:drawablePadding="300dp"
            />



        </LinearLayout>

    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:background="@drawable/rounded_stroke_button"
    android:textColor="#B57D6C"
    android:layout_marginTop="20dp"
    android:padding="10dp"
    />


    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Home Button -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Home"
            android:textSize="22sp" />

        <!-- Bookmark Button -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Bookmark"
            android:textSize="22sp" />

        <!-- Profile Button  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#FF4081"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- Bottom Navigation Section -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <!-- Home Navigation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="16sp"
            android:layout_marginEnd="20dp" />

        <!-- Bookmark Navigation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmark"
            android:textSize="16sp"
            android:layout_marginEnd="20dp" />

        <!-- Profile Navigation (Highlighted) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="16sp"
            android:textColor="#FF4081"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>